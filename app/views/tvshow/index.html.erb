<div class="container-fluid" style="padding-top:20px" ng-controller="tvshowsCtrl" ng-init="init()">
    <div class="row">
      <div class="card ol-sm-3 col-sm-offset-1 col-md-3 col-md-offset-1" ng-repeat="tvshow in tvshows">
        <table style="width:100%">
          <tr>
            <td class="text">
              <a ng-href="/{{ tvshow.identifier }}">
                <h3>{{ tvshow.name }}</h3>
                {{ tvshow.description }}
              </a>
            </td>
          </tr>
        </table>
      </div>
    </div>
</div>
